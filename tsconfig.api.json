{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "outDir": "./dist",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "api/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "api/**/*.test.ts",
    "tests/**/*",
    "node_modules",
    "dist",
    ".next"
  ]
}
