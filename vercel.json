{
  "buildCommand": "pnpm build:api && pnpm build:admin",
  "installCommand": "pnpm install -r --frozen-lockfile && pnpm db:migrate:vercel",
  "redirects": [
    {
      "source": "/",
      "destination": "https://github.com/nicoalbanese/ai-sdk-slackbot"
    }
  ],
  "functions": {
    "api/events.ts": {
      "maxDuration": 60
    },
    "api/servicenow-webhook.ts": {
      "maxDuration": 180
    },
    "api/cron/case-queue-snapshot.ts": {
      "maxDuration": 60
    },
    "api/cron/case-queue-report.ts": {
      "maxDuration": 60
    },
    "api/cron/case-leaderboard.ts": {
      "maxDuration": 60
    },
    "api/cron/sync-categories.ts": {
      "maxDuration": 180
    },
    "api/cron/enrich-pending-incidents.ts": {
      "maxDuration": 120
    },
    "api/cron/project-standups.ts": {
      "maxDuration": 120
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup-workflows",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/case-queue-snapshot",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/case-queue-report",
      "schedule": "15 9 * * *"
    },
    {
      "path": "/api/cron/case-leaderboard",
      "schedule": "30 9 * * *"
    },
    {
      "path": "/api/cron/sync-categories",
      "schedule": "0 0,12 * * *"
    },
    {
      "path": "/api/cron/enrich-pending-incidents",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/project-standups",
      "schedule": "0 * * * *"
    }
  ]
}
