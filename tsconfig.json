{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"],
      "@tests/*": ["tests/*"],
      "@api/*": ["api/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["api/**/*", "lib/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist", "tests", "scripts"]
}
